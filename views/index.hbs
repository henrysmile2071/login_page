<div class="container">
  <h1>Account Login</h1>
  <form action="/verification" method="post">
    <div class="form-group">
      <input type="email" name="email" id="email" placeholder="Email" {{#if token}}value="{{token.email}}" {{/if}} required>
      <input type="password" name="password" placeholder="Password" required>
      <button type="submit">Sign in</button>
  </form>
  {{#if alert}}<p>{{alert}}</p>{{/if}}
</div>
</div>